<div
     class="alert alert-success alert-dismissible fade show d-flex align-items-center {% if hidden is defined and hidden %}d-none{% endif %}"
     role="alert"
     {% if id is defined and id %}id="{{ id }}"{% endif %}
>
    <i class="fa-solid fa-circle-check me-3"></i>
    <span>{{ message|raw }}</span>

    {% if close is defined and close %}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="{{ 'alert.close'|trans }}"></button>
    {% endif %}
</div>