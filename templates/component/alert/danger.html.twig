<div class="alert alert-danger alert-dismissible fade show" role="alert">
    <i class="fa-solid fa-triangle-exclamation me-2"></i> {{ message }}

    {% if close is defined and close %}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="{{ 'alert.close'|trans }}"></button>
    {% endif %}
</div>