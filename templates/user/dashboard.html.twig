{% extends 'layout.html.twig' %}

{% block body %}
    <div class="panel-dashboard">
        {% include 'component/alert/info.html.twig' with {
            'message': 'page.dashboard.userNameReminder'|trans({'%username%': app.user.username})
        } %}

        {% include 'component/flashes.html.twig' %}

        <div class="accordion" id="news-panel">
            <h3>{{ 'nav.creatorNews'|trans }}</h3>
            <div class="accordion-item">
                <h4 class="accordion-header" id="news-1-header">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#news-1-body" aria-expanded="true" aria-controls="news-1-body">
                        New update
                    </button>
                </h4>
                <div id="news-1-body" class="accordion-collapse collapse show" aria-labelledby="news-1-header">
                    <div class="accordion-body">
                        <strong>Hello there!</strong> Thanks for support me.
                    </div>
                </div>
            </div>
            <div class="accordion-item">
                <h4 class="accordion-header" id="news-2-header">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#news-2-body" aria-expanded="false" aria-controls="news-2-body">
                        First release
                    </button>
                </h4>
                <div id="news-2-body" class="accordion-collapse collapse" aria-labelledby="news-2-header">
                    <div class="accordion-body">
                        Hello. I hope that you have a good time.
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}